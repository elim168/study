<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd        
	http://code.alibabatech.com/schema/dubbo        
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

  <!-- 消费方应用信息，用于计算依赖关系，要做到唯一 -->
  <dubbo:application name="learn-dubbo-client"/>

  <!-- consumer元素用于定义服务消费方的全局配置. -->
  <!-- actives对应客户端并发数 -->
  <dubbo:consumer actives="30" connections="8"/>

  <!-- 使用multicast广播注册中心暴露服务地址 -->
  <!--<dubbo:registry address="multicast://224.5.6.7:1234"/>-->
   <dubbo:registry address="zookeeper://localhost:2181"/>
  <!-- 生成远程服务代理，可以和本地bean一样使用demoService -->
  <!-- 服务消费方通过actives属性来控制消费方某个方法调用的最大线程数。如果需要控制连接数量，则通过
    connections来指定 -->
  <dubbo:reference id="userService" interface="com.elim.learn.dubbo.service.UserService" cache="lru"
                   actives="10" connections="5" version="1.0.0">
    <dubbo:method name="sayHello" actives="15"/>
  </dubbo:reference>
  <dubbo:reference id="service2" interface="com.elim.learn.dubbo.service.Service2"/>

</beans>